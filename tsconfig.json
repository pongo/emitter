{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.tsx"
  ]
}